<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object class="AdwAlertDialog" id="dialog">
        <property name="close-response">cancel</property>
        <property name="default-response">ok</property>
        <property name="heading">Hinzufügen?</property>
        <property name="body">Entferntes Gerät hinzufügen?</property>
        <property name="extra-child">
            <object class="GtkBox" id="extra">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <child>
                    <object class="GtkEntry" id="text">
                        <property name="activates-default">true</property>
                        <property name="placeholder-text">Anzeigename</property>
                    </object>
                </child>                    
                <child>
                    <object class="GtkEntry" id="ip">
                        <property name="activates-default">true</property>
                        <property name="placeholder-text">IP-Adresse oder Hostname</property>
                    </object>
                </child>                    
                <child>
                    <object class="GtkCheckButton" id="android">
                        <property name="label">Android</property>
                    </object>
                </child>
            </object>
        </property>
        <responses>
            <response id="cancel" translatable="yes">_Abbrechen</response>
            <response id="ok" translatable="yes" appearance="suggested" >_OK</response>
        </responses>
    </object>
</interface>




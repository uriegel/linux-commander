<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PublishSingleFile>true</PublishSingleFile>
    <PublishTrimmed>true</PublishTrimmed>
    <OutputType>Exe</OutputType>
	  <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
	  <TargetFramework>net5.0</TargetFramework>
    <PublishReadyToRun>false</PublishReadyToRun>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="URiegel.WebServer" Version="0.5.0" />
    <PackageReference Include="GtkDotNet" Version="5.5.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="../resources/resources.gresource" />
  </ItemGroup>

  <Target Name="PreBuildDebug" Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'" BeforeTargets="PreBuildEvent">
    <Exec Command="npm run builddev" />
    <Exec Command="cd ../resources&#xD;&#xA;glib-compile-resources resources.xml" />
  </Target>

  <Target Name="PreBuildRelease" Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'" BeforeTargets="PreBuildEvent">
    <Exec Command="npm run build" />
    <Exec Command="cd ../resources&#xD;&#xA;glib-compile-resources resources.xml" />
  </Target>

</Project>
